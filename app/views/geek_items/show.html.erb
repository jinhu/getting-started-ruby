<h3>game</h3>

<div class="btn-group">
  <%= link_to edit_geek_item_path(@item), class: "btn btn-primary btn-sm" do %>
    <i class="glyphicon glyphicon-edit"></i>
    <span>Edit item</span>
  <% end %>
  <%= link_to geek_item_path(@item), class: "btn btn-danger btn-sm", method: :delete do %>
    <i class="glyphicon glyphicon-trash"></i>
    <span>Delete game</span>
  <% end %>
</div>

<%# [START game_details] %>
<div class="media">
  <div class="media-body">
    <h4><%= @item.item_id %> | &nbsp; <small><%= @item.status %></small></h4>
    <h5>By <%= @item.kind || "unknown" %></h5>
    <p><%= @item.user_id %></p>
  </div>
</div>
<%# [END game_details] %>
