<h3>Book</h3>

<% if @item.errors.any? %>
  <div class="errors">
    <% @item.errors.full_messages.each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>
<% end %>

<!-- [START multipart] -->
<%= form_for @item do |f| %>
<!-- [END multipart] -->
  <div class="form-group">
    <%= f.label :item_id %>
    <%= f.text_field :item_id %>
  </div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.text_field :status %>
    </div>

    <div class="form-group">
      <%= f.label :kind %>
      <%= f.text_field :kind %>
    </div>

    <!-- [END cover_image] -->
  <button class="btn btn-success" type="submit">Save</button>
<% end %>
